{
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.formatOnSaveFiletypes": [
    "markdown",
    "python",
    "css",
    "javascript"
  ],
  "coc.preferences.rootPatterns": [
  	".git",
		"pom.xml",
		"package.json"
  ],
	"list.source.files.command": "",
	"list.source.files.excludePatterns": [
		"**/.git/*",
		"**/.gitignore",
		"**/node_modules/**",
		"**/.settings/**",
		"**/.classpath",
		"**/.project",
		"**/target/**"
	],
	"list.source.mru.excludePatterns": [
		"**/.git/*",
		"**/node_modules/**",
		"**/target/**"
	],
  "python.linting.flake8Enabled": true,
  "python.venvPath": "~/.local/share/virtualenvs",
  "java.home": "/usr/lib/jvm/java-13-openjdk",
  "java.format.enabled": true,
  "java.import.maven.enabled": true,
  "java.autobuild.enabled": true,
  "tsserver.log": "off",
  "eslint.filetypes": ["javascript","typescript"],
  "deno.enable": true
}
