#!/bin/bash

if [ "$(id -u)" != "0" ]; then
    echo "É preciso sudo ou root para executar esse script."
    exit 1
fi

# Script de configuração do vim
dpkg -s vim | grep -q installed
if [ ! $? ]; then
    apt install -y exuberant-ctags vim vim-addon-manager vim-airline vim-common vim-ctrlp vim-khuno vim-nox vim-scripts vim-snippets vim-syntastic vim-syntax-docker vim-ultisnips vim-youcompleteme
fi

# Configurações do sistema
curl -s https://raw.githubusercontent.com/flavioarcega/utils/master/debian/vim/.vimrc -o /etc/vim/vimrc.local

# Configurando scripts e plugins
echo "Para habilitar addons em nivel de usuario execute:"
echo "$ vim-addons install closetag surround taglist youcompleteme markdown ctrlp"
