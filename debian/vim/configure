#!/bin/bash

if [ "$(id -u)" != "0" ]; then
    echo "É preciso sudo ou root para executar esse script."
    exit 1
fi

# Script de configuração do vim
dpkg -s vim-gtk3 | grep -q installed
if [ ! $? ]; then
    apt install -y vim-gtk3
fi

# Configurações do sistema
curl --create-dirs -sfLo /usr/share/vim/plug.vim \
  https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

curl --create-dirs -sfLo /etc/vim/vimrc.local \
  https://raw.githubusercontent.com/flavioarcega/utils/master/debian/vim/vimrc.local

# Instalando Plugins
echo "Não esquecer de incluir o /usr/share/vim/plug.vim"
echo "Para instalar os plugins execute o comando PlugInstall no vi"
